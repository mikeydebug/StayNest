<%- include('../partials/head') %>
</head>
<body class="bg-gray-950">
    <%- include('../partials/host-nav') %>
    
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-purple-600 via-violet-600 to-indigo-600 text-white py-16">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">My Listings</h1>
            <p class="text-xl text-purple-100">Manage your properties</p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h2 class="text-3xl font-bold text-white mb-2">Your Properties</h2>
                <p class="text-gray-400">View and manage all your listed homes</p>
            </div>
            <a href="/host/add-home" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add New Home
            </a>
        </div>

        <% if (hostHomes && hostHomes.length === 0) { %>
            <!-- Empty State -->
            <div class="text-center py-20">
                <svg class="w-24 h-24 mx-auto text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-300 mb-2">No listings yet</h3>
                <p class="text-gray-500 mb-6">Start earning by listing your first property!</p>
                <a href="/host/add-home" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold px-8 py-3 rounded-full transition-colors">
                    List Your First Home
                </a>
            </div>
        <% } else { %>
            <!-- Homes Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% hostHomes.forEach(function(home, index) { %>
                    <div class="bg-gray-900 border border-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:border-purple-500 transition-all duration-300">
                        <!-- Image -->
                        <div class="relative">
                            <img src="<%= home.imageUrl %>" alt="<%= home.title %>" class="h-56 w-full object-cover">
                            <span class="absolute top-4 right-4 bg-green-500 text-white text-xs font-semibold px-3 py-1 rounded-full">Active</span>
                        </div>
                        
                        <!-- Content -->
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-xl font-bold text-white"><%= home.title %></h3>
                                <div class="flex items-center gap-1">
                                    <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                                    </svg>
                                    <span class="text-white font-semibold"><%= home.rating || 4.5 %></span>
                                </div>
                            </div>
                            <p class="text-xs text-indigo-400 font-mono mb-2">ID: <%= home.id %></p>
                            <p class="text-gray-400 text-sm mb-2"><%= home.location %></p>
                            <p class="text-gray-400 mb-4 line-clamp-2"><%= home.description %></p>
                            
                            <div class="flex items-center justify-between pt-4 border-t border-gray-800 mb-4">
                                <div>
                                    <span class="text-2xl font-bold text-purple-400">$<%= home.price %></span>
                                    <span class="text-gray-500 text-sm"> / night</span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex gap-2">
                                <a href="/host/edit-home/<%= index %>" class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors text-center">
                                    Edit
                                </a>
                                <button onclick="deleteHome('<%= index %>')" class="flex-1 bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors">
                                    Delete
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 border-t border-gray-800 text-white py-8 mt-20">
        <div class="container mx-auto px-4 text-center">
            <p class="text-gray-500">&copy; 2025 StayNest. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function deleteHome(id) {
            if (confirm('Are you sure you want to delete this home?')) {
                fetch(`/host/delete-home/${id}`, {
                    method: 'POST'
                }).then(() => {
                    window.location.reload();
                });
            }
        }
    </script>
</body>
</html>