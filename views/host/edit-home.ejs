<%- include('../partials/head') %>
</head>
<body class="bg-gray-950 min-h-screen">
    <%- include('../partials/nav') %>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-900 border border-gray-800 rounded-2xl shadow-xl p-8 md:p-12">
                <div class="mb-8">
                    <h2 class="text-4xl font-bold text-white mb-2">Edit Home</h2>
                    <p class="text-gray-400">Update your property details</p>
                </div>
                
                <form action="/host/edit-home/<%= home.id %>" method="POST" class="space-y-6">
                    <!-- Home Title -->
                    <div>
                        <label for="title" class="block text-sm font-semibold text-gray-300 mb-2">
                            Home Title
                        </label>
                        <input 
                            type="text" 
                            id="title" 
                            name="title" 
                            value="<%= home.title %>"
                            required
                            placeholder="Beautiful beachfront villa"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-semibold text-gray-300 mb-2">
                            Description
                        </label>
                        <textarea 
                            id="description" 
                            name="description" 
                            required
                            rows="5"
                            placeholder="Describe your property..."
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none resize-none placeholder-gray-500"
                        ><%= home.description %></textarea>
                    </div>

                    <!-- Price -->
                    <div>
                        <label for="price" class="block text-sm font-semibold text-gray-300 mb-2">
                            Price per Night
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-3.5 text-gray-400 font-medium">$</span>
                            <input 
                                type="number" 
                                id="price" 
                                name="price" 
                                value="<%= home.price %>"
                                required
                                min="1"
                                placeholder="99"
                                class="w-full pl-8 pr-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                            >
                        </div>
                    </div>

                    <!-- Location -->
                    <div>
                        <label for="location" class="block text-sm font-semibold text-gray-300 mb-2">
                            Location
                        </label>
                        <input 
                            type="text" 
                            id="location" 
                            name="location" 
                            value="<%= home.location %>"
                            required
                            placeholder="City, State, or Country"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Image URL -->
                    <div>
                        <label for="imageUrl" class="block text-sm font-semibold text-gray-300 mb-2">
                            Image URL
                        </label>
                        <input 
                            type="url" 
                            id="imageUrl" 
                            name="imageUrl" 
                            value="<%= home.imageUrl %>"
                            required
                            placeholder="https://example.com/image.jpg"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Rating -->
                    <div>
                        <label for="rating" class="block text-sm font-semibold text-gray-300 mb-2">
                            Rating
                        </label>
                        <input 
                            type="number" 
                            id="rating" 
                            name="rating" 
                            value="<%= home.rating %>"
                            step="0.1"
                            min="0"
                            max="5"
                            placeholder="4.5"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex gap-4 pt-4">
                        <button 
                            type="submit" 
                            class="flex-1 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold py-3 px-6 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all"
                        >
                            Update Home
                        </button>
                        <a 
                            href="/host/homes" 
                            class="flex-1 bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-6 rounded-lg text-center transition-all"
                        >
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 border-t border-gray-800 text-white py-8 mt-20">
        <div class="container mx-auto px-4 text-center">
            <p class="text-gray-500">&copy; 2025 StayNest. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>