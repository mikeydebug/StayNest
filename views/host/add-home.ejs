<%- include('../partials/head') %>
</head>
<body class="bg-gray-950 min-h-screen">
    <%- include('../partials/host-nav') %>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="max-w-2xl mx-auto">
            <div class="bg-gray-900 border border-gray-800 rounded-2xl shadow-xl p-8 md:p-12">
                <h2 class="text-4xl font-bold text-white mb-2">Add a New Home</h2>
                <p class="text-gray-400 mb-8">List your property and start welcoming guests</p>
                
                <% if (typeof error !== 'undefined' && error) { %>
                    <!-- Error Alert -->
                    <div class="bg-red-500/10 border-2 border-red-500 rounded-lg p-4 mb-6 flex items-start gap-3">
                        <svg class="w-6 h-6 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div>
                            <h3 class="text-red-500 font-semibold mb-1">Error!</h3>
                            <p class="text-red-300 text-sm"><%= error %></p>
                        </div>
                    </div>
                <% } %>
                
                <form action="/host/add-home" method="POST" class="space-y-6">
                    <!-- Property ID -->
                    <div>
                        <label for="id" class="block text-sm font-semibold text-gray-300 mb-2">
                            Property ID
                        </label>
                        <input 
                            type="text" 
                            id="id" 
                            name="id" 
                            required
                            placeholder="Enter unique property ID (e.g., PROP001, villa-123)"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                        <p class="text-xs text-gray-500 mt-1">Enter a unique identifier for this property</p>
                    </div>

                    <!-- Home Title -->
                    <div>
                        <label for="title" class="block text-sm font-semibold text-gray-300 mb-2">
                            Home Title
                        </label>
                        <input 
                            type="text" 
                            id="title" 
                            name="title" 
                            required
                            placeholder="Beautiful beachfront villa"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Description -->
                    <div>
                        <label for="description" class="block text-sm font-semibold text-gray-300 mb-2">
                            Description
                        </label>
                        <textarea 
                            id="description" 
                            name="description" 
                            required
                            rows="5"
                            placeholder="Describe your property, amenities, and what makes it special..."
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none resize-none placeholder-gray-500"
                        ></textarea>
                    </div>

                    <!-- Price -->
                    <div>
                        <label for="price" class="block text-sm font-semibold text-gray-300 mb-2">
                            Price per Night
                        </label>
                        <div class="relative">
                            <span class="absolute left-4 top-3.5 text-gray-400 font-medium">$</span>
                            <input 
                                type="number" 
                                id="price" 
                                name="price" 
                                required
                                min="1"
                                placeholder="99"
                                class="w-full pl-8 pr-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                            >
                        </div>
                    </div>

                    <!-- Location -->
                    <div>
                        <label for="location" class="block text-sm font-semibold text-gray-300 mb-2">
                            Location
                        </label>
                        <input 
                            type="text" 
                            id="location" 
                            name="location" 
                            required
                            placeholder="City, State, or Country"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Image URL -->
                    <div>
                        <label for="imageUrl" class="block text-sm font-semibold text-gray-300 mb-2">
                            Image URL
                        </label>
                        <input 
                            type="url" 
                            id="imageUrl" 
                            name="imageUrl" 
                            required
                            placeholder="https://example.com/image.jpg"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Rating -->
                    <div>
                        <label for="rating" class="block text-sm font-semibold text-gray-300 mb-2">
                            Rating (1-5 stars)
                        </label>
                        <input 
                            type="number" 
                            id="rating" 
                            name="rating" 
                            required
                            min="1"
                            max="5"
                            step="0.1"
                            placeholder="4.5"
                            class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all outline-none placeholder-gray-500"
                        >
                    </div>

                    <!-- Submit Button -->
                    <div class="pt-4">
                        <button 
                            type="submit"
                            class="w-full bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold py-4 px-6 rounded-lg shadow-lg hover:shadow-xl hover:from-purple-700 hover:to-indigo-700 transform hover:scale-[1.02] transition-all duration-300"
                        >
                            Add Home
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</body>
</html>