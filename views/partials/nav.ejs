<!-- Header -->
<header class="bg-gray-900 border-b border-gray-800 shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group">
                <div class="bg-gradient-to-br from-purple-500 to-pink-600 p-2 rounded-xl group-hover:scale-110 transition-transform">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                </div>
                <h1 class="text-2xl font-bold bg-gradient-to-r from-purple-400 to-pink-600 bg-clip-text text-transparent">StayNest</h1>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center gap-8">
                <a href="/homes" class="<%= activePage === 'home' ? 'text-purple-400 border-b-2 border-purple-400' : 'text-gray-300 hover:text-white' %> font-semibold pb-1 transition-all">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Home
                    </span>
                </a>

            <!-- check if logged in  -->

            <% if (isLoggedIn) { %>
                <a href="/favorites" class="<%= activePage === 'favorites' ? 'text-purple-400 border-b-2 border-purple-400' : 'text-gray-300 hover:text-white' %> font-semibold pb-1 transition-all">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        Favorites
                    </span>
                </a>
                <a href="/bookings" class="<%= activePage === 'bookings' ? 'text-purple-400 border-b-2 border-purple-400' : 'text-gray-300 hover:text-white' %> font-semibold pb-1 transition-all">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Bookings
                    </span>
                </a>
                <a href="/host/host-home-list" class="<%= activePage === 'host-home-list' ? 'text-purple-400 border-b-2 border-purple-400' : 'text-gray-300 hover:text-white' %> font-semibold pb-1 transition-all">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        My Listings
                    </span>
                </a>
                
                <a href="/host/add-home" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-semibold px-6 py-2.5 rounded-full shadow-lg hover:shadow-xl transform hover:scale-105 transition-all flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                    </svg>
                    List Home
                </a>
                <% } %>
                <!-- login  -->
                <% if (!isLoggedIn) { %>
                <a href="/login" class="text-gray-300 hover:text-white font-semibold pb-1 transition-all bg-gray-800 rounded-lg px-4 py-2">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Login
                    </span>
                </a>
                <% } %>
                <% if (isLoggedIn) { %>
                    <form action="/logout" method="POST">
                        <button type="submit" class="text-gray-300 hover:text-white font-semibold pb-1 transition-all bg-gray-800 rounded-lg px-4 py-2">
                            <span class="flex items-center gap-2">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                Logout
                            </span>
                        </button>
                    </form>
                <% } %>
                
            </nav>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-gray-300 hover:text-white" onclick="toggleMobileMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobileMenu" class="hidden md:hidden mt-4 pb-4 space-y-3">
            <a href="/homes" class="block text-gray-300 hover:text-white hover:bg-gray-800 px-4 py-2 rounded-lg transition-all">Home</a>
            <a href="/favorites" class="block text-gray-300 hover:text-white hover:bg-gray-800 px-4 py-2 rounded-lg transition-all">Favorites</a>
            <a href="/bookings" class="block text-gray-300 hover:text-white hover:bg-gray-800 px-4 py-2 rounded-lg transition-all">Bookings</a>
            <a href="/host/host-home-list" class="block text-gray-300 hover:text-white hover:bg-gray-800 px-4 py-2 rounded-lg transition-all">My Listings</a>
            <a href="/host/add-home" class="block bg-gradient-to-r from-purple-600 to-pink-600 text-white text-center px-4 py-2 rounded-lg">List Your Home</a>
        </div>
    </div>
</header>

<script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('hidden');
    }
</script>