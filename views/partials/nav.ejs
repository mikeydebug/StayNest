<!-- Header -->
<header class="bg-gray-900/95 backdrop-blur-md border-b border-purple-500/20 shadow-2xl sticky top-0 z-50">
    <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
            <!-- Logo -->
            <a href="/" class="flex items-center gap-3 group">
                <div class="bg-gradient-to-br from-purple-600 to-pink-600 p-3 rounded-2xl group-hover:scale-110 group-hover:rotate-6 transition-all duration-300 shadow-lg shadow-purple-500/50">
                    <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                    </svg>
                </div>
                <div>
                    <h1 class="text-2xl font-extrabold bg-gradient-to-r from-purple-400 via-pink-400 to-purple-400 bg-clip-text text-transparent">StayNest</h1>
                    <% if (isLoggedIn && user && user.accountType === 'host') { %>
                    <p class="text-xs text-gray-400 font-medium">Host Dashboard</p>
                    <% } %>
                </div>
            </a>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center gap-6">
                <a href="/homes" class="<%= activePage === 'home' ? 'text-purple-400 bg-purple-500/10' : 'text-gray-300 hover:text-white hover:bg-gray-800/50' %> font-semibold px-4 py-2 rounded-xl transition-all duration-300 group">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                        </svg>
                        Home
                    </span>
                </a>

                <!-- Guest specific links (only show if logged in AND user is guest) -->
                <% if (isLoggedIn && user && user.accountType === 'guest') { %>
                <a href="/favorites" class="<%= activePage === 'favorites' ? 'text-purple-400 bg-purple-500/10' : 'text-gray-300 hover:text-white hover:bg-gray-800/50' %> font-semibold px-4 py-2 rounded-xl transition-all duration-300 group">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        Favorites
                    </span>
                </a>
                <a href="/bookings" class="<%= activePage === 'bookings' ? 'text-purple-400 bg-purple-500/10' : 'text-gray-300 hover:text-white hover:bg-gray-800/50' %> font-semibold px-4 py-2 rounded-xl transition-all duration-300 group">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        Bookings
                    </span>
                </a>
                <% } %>

                <!-- Host specific links (only show if logged in AND user is host) -->
                <% if (isLoggedIn && user && user.accountType === 'host') { %>
                <a href="/host/host-home-list" class="<%= activePage === 'host-home-list' ? 'text-purple-400 bg-purple-500/10' : 'text-gray-300 hover:text-white hover:bg-gray-800/50' %> font-semibold px-4 py-2 rounded-xl transition-all duration-300 group">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                        </svg>
                        My Listings
                    </span>
                </a>
                
                <a href="/host/add-home" class="relative bg-gradient-to-r from-purple-600 via-pink-600 to-purple-600 hover:from-purple-700 hover:via-pink-700 hover:to-purple-700 text-white font-bold px-6 py-2.5 rounded-full shadow-lg hover:shadow-2xl hover:shadow-purple-500/50 transform hover:scale-105 transition-all duration-300 flex items-center gap-2 overflow-hidden group">
                    <span class="relative z-10 flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                        </svg>
                        List Home
                    </span>
                    <div class="absolute inset-0 bg-gradient-to-r from-pink-600 to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </a>
                <% } %>
                
                <!-- Login button (only show if NOT logged in) -->
                <% if (!isLoggedIn) { %>
                <a href="/login" class="text-gray-300 hover:text-white font-semibold transition-all duration-300 bg-gray-800/50 hover:bg-gray-700/70 rounded-xl px-5 py-2.5 border border-gray-700/50 hover:border-purple-500/50 transform hover:scale-105">
                    <span class="flex items-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Login
                    </span>
                </a>
                <% } %>
                
                <!-- Logout button (only show if logged in) -->
                <% if (isLoggedIn) { %>
                <form action="/logout" method="POST">
                    <button type="submit" class="text-gray-300 hover:text-white font-semibold transition-all duration-300 bg-gray-800/50 hover:bg-red-600/80 rounded-xl px-5 py-2.5 border border-gray-700/50 hover:border-red-500/50 transform hover:scale-105">
                        <span class="flex items-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                            </svg>
                            Logout
                        </span>
                    </button>
                </form>
                <% } %>
            </nav>

            <!-- Mobile Menu Button -->
            <button class="md:hidden text-gray-300 hover:text-white bg-gray-800/50 p-2 rounded-xl transition-all duration-300 hover:scale-110" onclick="toggleMobileMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobileMenu" class="hidden md:hidden mt-4 pb-4 space-y-2 backdrop-blur-md">
            <a href="/homes" class="block text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-purple-500/30">Home</a>
            
            <!-- Guest mobile links (only show if logged in AND user is guest) -->
            <% if (isLoggedIn && user && user.accountType === 'guest') { %>
            <a href="/favorites" class="block text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-purple-500/30">Favorites</a>
            <a href="/bookings" class="block text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-purple-500/30">Bookings</a>
            <% } %>
            
            <!-- Host mobile links (only show if logged in AND user is host) -->
            <% if (isLoggedIn && user && user.accountType === 'host') { %>
            <a href="/host/host-home-list" class="block text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-purple-500/30">My Listings</a>
            <a href="/host/add-home" class="block bg-gradient-to-r from-purple-600 to-pink-600 text-white text-center px-4 py-3 rounded-xl shadow-lg">List Your Home</a>
            <% } %>
            
            <!-- Login (only show if NOT logged in) -->
            <% if (!isLoggedIn) { %>
            <a href="/login" class="block text-gray-300 hover:text-white hover:bg-gray-800/50 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-purple-500/30">Login</a>
            <% } %>
            
            <!-- Logout (only show if logged in) -->
            <% if (isLoggedIn) { %>
            <form action="/logout" method="POST">
                <button type="submit" class="w-full text-left text-gray-300 hover:text-white hover:bg-red-600/80 px-4 py-3 rounded-xl transition-all duration-300 border border-transparent hover:border-red-500/30">Logout</button>
            </form>
            <% } %>
        </div>
    </div>
</header>

<script>
    function toggleMobileMenu() {
        const menu = document.getElementById('mobileMenu');
        menu.classList.toggle('hidden');
    }
</script>