<%- include('../partials/head')  %>
</head>
<body class="bg-gray-950">
    <%- include('../partials/nav') %>
    
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-purple-600 via-violet-600 to-indigo-600 text-white py-16">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">My Bookings</h1>
            <p class="text-xl text-purple-100">View and manage your reservations</p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <!-- Tabs -->
        <div class="flex gap-4 mb-8 border-b border-gray-800">
            <button class="px-6 py-3 font-semibold text-purple-400 border-b-2 border-purple-400">
                Upcoming
            </button>
            <button class="px-6 py-3 font-semibold text-gray-400 hover:text-white transition-colors">
                Past
            </button>
            <button class="px-6 py-3 font-semibold text-gray-400 hover:text-white transition-colors">
                Cancelled
            </button>
        </div>

        <% if (bookings && bookings.length > 0) { %>
            <!-- Bookings List -->
            <div class="space-y-6">
                <% bookings.forEach(function(booking) { 
                    const checkInDate = new Date(booking.checkIn).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    const checkOutDate = new Date(booking.checkOut).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
                    const statusClass = booking.status === 'upcoming' ? 'bg-green-500' : booking.status === 'completed' ? 'bg-blue-500' : 'bg-red-500';
                    const statusText = booking.status.charAt(0).toUpperCase() + booking.status.slice(1);
                %>
                    <div class="bg-gray-900 border border-gray-800 rounded-xl shadow-lg overflow-hidden hover:border-purple-500 transition-all">
                        <div class="md:flex">
                            <!-- Image -->
                            <div class="md:w-64 md:flex-shrink-0">
                                <img src="/<%= booking.homeId.image %>" alt="<%= booking.homeId.title %>" class="h-full w-full object-cover md:h-64">
                            </div>
                            
                            <!-- Content -->
                            <div class="p-6 flex-1">
                                <div class="flex items-start justify-between mb-4">
                                    <div>
                                        <h3 class="text-2xl font-bold text-white mb-2"><%= booking.homeId.title %></h3>
                                        <p class="text-gray-400 flex items-center gap-2">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                            </svg>
                                            <%= booking.homeId.location %>
                                        </p>
                                    </div>
                                    <span class="<%= statusClass %> text-white text-xs font-semibold px-3 py-1 rounded-full">
                                        <%= statusText %>
                                    </span>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
                                    <div>
                                        <p class="text-sm text-gray-400">Check-in</p>
                                        <p class="text-white font-semibold"><%= checkInDate %></p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-400">Check-out</p>
                                        <p class="text-white font-semibold"><%= checkOutDate %></p>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-400">Guests</p>
                                        <p class="text-white font-semibold"><%= booking.guests %> guest<%= booking.guests > 1 ? 's' : '' %></p>
                                    </div>
                                </div>

                                <div class="flex items-center justify-between pt-4 border-t border-gray-800">
                                    <div>
                                        <p class="text-sm text-gray-400">Total Price</p>
                                        <p class="text-2xl font-bold text-purple-400">$<%= booking.totalPrice %></p>
                                    </div>
                                    <div class="flex gap-3">
                                        <a href="/homes/<%= booking.homeId.id %>" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-2 rounded-lg transition-colors">
                                            View Details
                                        </a>
                                        <% if (booking.status === 'upcoming') { %>
                                        <form action="/bookings/cancel/<%= booking._id %>" method="POST" style="display: inline;">
                                            <button type="submit" class="bg-gray-800 hover:bg-red-600 text-white font-semibold px-6 py-2 rounded-lg transition-colors">
                                                Cancel
                                            </button>
                                        </form>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-20">
                <svg class="w-24 h-24 mx-auto text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-300 mb-2">No bookings yet</h3>
                <p class="text-gray-500 mb-6">Start exploring and book your dream home!</p>
                <a href="/" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold px-8 py-3 rounded-full transition-colors">
                    Explore Homes
                </a>
            </div>
        <% } %>
    </main>
    <%- include('../partials/footer') %>