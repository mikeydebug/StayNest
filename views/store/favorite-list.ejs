<%- include('../partials/head') %>
</head>
<body class="bg-gray-950">
    <%- include('../partials/nav') %>
    
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-purple-600 via-violet-600 to-indigo-600 text-white py-16">
        <div class="container mx-auto px-4">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">My Favorites</h1>
            <p class="text-xl text-purple-100">Your saved homes in one place</p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-white mb-2">Saved Homes (<%= favorites && favorites.length || 0 %>)</h2>
            <p class="text-gray-400">Properties you've added to your wishlist</p>
        </div>

        <% if (favorites && favorites.length > 0) { %>
            <!-- Favorites Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% favorites.forEach(function(home) { %>
                    <div class="bg-gray-900 border border-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:border-purple-500 transform hover:-translate-y-1 transition-all duration-300 relative group">
                        <!-- Remove from Favorites Button -->
                        <form action="/favorites/delete/<%= home.id %>" method="POST" class="absolute top-4 right-4 z-10">
                            <button type="submit" class="bg-white hover:bg-gray-100 text-red-500 p-2 rounded-full shadow-lg transition-all opacity-0 group-hover:opacity-100">
                                <svg class="w-6 h-6 fill-current" viewBox="0 0 24 24">
                                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                                </svg>
                            </button>
                        </form>

                        <!-- Image -->
                        <a href="/store/home/<%= home.id %>">
                            <img src="<%= home.imageUrl %>" alt="<%= home.title %>" class="h-56 w-full object-cover">
                        </a>
                        
                        <!-- Content -->
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-xl font-bold text-white"><%= home.title %></h3>
                                <div class="flex items-center gap-1">
                                    <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                                    </svg>
                                    <span class="text-white font-semibold"><%= home.rating || 4.5 %></span>
                                </div>
                            </div>
                            <p class="text-gray-400 text-sm mb-2 flex items-center gap-1">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                </svg>
                                <%= home.location %>
                            </p>
                            <p class="text-gray-400 mb-4 line-clamp-3"><%= home.description %></p>
                            
                            <div class="flex items-center justify-between pt-4 border-t border-gray-800">
                                <div>
                                    <span class="text-2xl font-bold text-purple-400">$<%= home.price %></span>
                                    <span class="text-gray-500 text-sm"> / night</span>
                                </div>
                                <a href="/homes/<%= home.id %>" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-2 rounded-lg transition-colors">
                                    View
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <!-- Empty State -->
            <div class="text-center py-20">
                <svg class="w-24 h-24 mx-auto text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-300 mb-2">No favorites yet</h3>
                <p class="text-gray-500 mb-6">Start adding homes to your wishlist and find them here!</p>
                <a href="/" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold px-8 py-3 rounded-full transition-colors">
                    Explore Homes
                </a>
            </div>
        <% } %>

        <!-- Tips Section -->
        <% if (favorites && favorites.length > 0) { %>
            <div class="mt-16 bg-gradient-to-r from-purple-900 to-indigo-900 rounded-2xl p-8 text-center">
                <h3 class="text-2xl font-bold text-white mb-4">ðŸ’¡ Quick Tip</h3>
                <p class="text-purple-200 max-w-2xl mx-auto">
                    Book your favorite homes quickly! Many of these properties get reserved fast. 
                    Don't miss out on your dream vacation spot.
                </p>
                <a href="/" class="inline-block mt-6 bg-white text-purple-900 font-bold px-8 py-3 rounded-full hover:bg-gray-100 transition-all">
                    Browse More Homes
                </a>
            </div>
        <% } %>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>