<%- include('../partials/head') %>
</head>
<body class="bg-gray-950">
    <%- include('../partials/nav') %>
    
    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <!-- Back Button -->
        <a href="/" class="inline-flex items-center text-gray-400 hover:text-white mb-6 transition-colors">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Back to Homes
        </a>

        <!-- Home Detail -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Left Column - Images and Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Main Image -->
                <div class="rounded-2xl overflow-hidden shadow-2xl">
                    <img src="<%= home.imageUrl %>" alt="<%= home.title %>" class="w-full h-96 object-cover">
                </div>

                <!-- Title and Location -->
                <div class="bg-gray-900 border border-gray-800 rounded-xl p-8">
                    <div class="flex items-start justify-between mb-4">
                        <div>
                            <h1 class="text-4xl font-bold text-white mb-2"><%= home.title %></h1>
                            <div class="flex items-center gap-4 text-gray-400">
                                <span class="flex items-center gap-1">
                                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <%= home.location %>
                                </span>
                            </div>
                        </div>
                        <div class="flex items-center gap-2 bg-yellow-400 text-gray-900 px-4 py-2 rounded-full">
                            <svg class="w-6 h-6 fill-current" viewBox="0 0 20 20">
                                <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                            </svg>
                            <span class="font-bold text-lg"><%= home.rating || 4.5 %></span>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="border-t border-gray-800 pt-6">
                        <h2 class="text-2xl font-bold text-white mb-4">About this place</h2>
                        <p class="text-gray-300 leading-relaxed"><%= home.description %></p>
                    </div>
                </div>

                <!-- Amenities -->
                <div class="bg-gray-900 border border-gray-800 rounded-xl p-8">
                    <h2 class="text-2xl font-bold text-white mb-6">Amenities</h2>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
                            </svg>
                            WiFi
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
                            </svg>
                            Kitchen
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>
                            </svg>
                            AC
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                            </svg>
                            Safe
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                            </svg>
                            Parking
                        </div>
                        <div class="flex items-center gap-3 text-gray-300">
                            <svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Pet Friendly
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Booking Card -->
            <div class="lg:col-span-1">
                <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 sticky top-24">
                    <div class="mb-6">
                        <div class="flex items-baseline gap-2 mb-2">
                            <span class="text-4xl font-bold text-purple-400">$<%= home.price %></span>
                            <span class="text-gray-500"> / night</span>
                        </div>
                    </div>

                    <!-- Booking Form -->
                    <form action="/store/reserve" method="POST" class="space-y-4">
                        <div>
                            <label class="block text-sm font-semibold text-gray-300 mb-2">Check-in</label>
                            <input 
                                type="date" 
                                name="checkin" 
                                required
                                class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-300 mb-2">Check-out</label>
                            <input 
                                type="date" 
                                name="checkout" 
                                required
                                class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-300 mb-2">Guests</label>
                            <select 
                                name="guests" 
                                class="w-full px-4 py-3 bg-gray-800 border-2 border-gray-700 text-white rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent outline-none"
                            >
                                <option value="1">1 guest</option>
                                <option value="2">2 guests</option>
                                <option value="3">3 guests</option>
                                <option value="4">4 guests</option>
                                <option value="5">5+ guests</option>
                            </select>
                        </div>
                        
                        <button 
                            type="submit" 
                            class="w-full bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-700 hover:to-pink-700 text-white font-bold py-4 rounded-lg shadow-lg hover:shadow-xl transform hover:scale-105 transition-all"
                        >
                            Reserve Now
                        </button>
                    </form>

                    <p class="text-center text-sm text-gray-500 mt-4">You won't be charged yet</p>

                    <!-- Price Breakdown -->
                    <div class="mt-6 pt-6 border-t border-gray-800 space-y-2 text-sm">
                        <div class="flex justify-between text-gray-400">
                            <span>$<%= home.price %> x 5 nights</span>
                            <span>$<%= home.price * 5 %></span>
                        </div>
                        <div class="flex justify-between text-gray-400">
                            <span>Service fee</span>
                            <span>$50</span>
                        </div>
                        <div class="flex justify-between text-white font-bold text-base pt-2 border-t border-gray-800">
                            <span>Total</span>
                            <span>$<%= (home.price * 5) + 50 %></span>
                        </div>
                    </div>

                    <!-- Add to Favorites -->
                    <form action="/favorites" method="POST">
                    <button type="submit" class="w-full mt-4 border-2 border-gray-700 hover:border-purple-500 text-white font-semibold py-3 rounded-lg transition-all flex items-center justify-center gap-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                        </svg>
                        <input type="hidden" name="homeId" value="<%= home.id %>">
                        Add to Favorites
                    </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>