<%- include('../partials/head') %>
</head>
<body class="bg-gray-950">
    <%- include('../partials/nav',{ isLoggedIn: isLoggedIn }) %>
    
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-purple-600 via-violet-600 to-indigo-600 text-white py-16">
        <div class="container mx-auto px-4 text-center">
            <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to StayNest</h1>
            <p class="text-xl text-purple-100">Find your perfect home away from home</p>
        </div>
    </div>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
        <div class="mb-8">
            <h2 class="text-3xl font-bold text-white mb-2">Available Homes</h2>
            <p class="text-gray-400">Explore our collection of amazing properties</p>
        </div>

        <% if (registeredHomes.length === 0) { %>
            <!-- Empty State -->
            <div class="text-center py-20">
                <svg class="w-24 h-24 mx-auto text-gray-700 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <h3 class="text-2xl font-semibold text-gray-300 mb-2">No homes available yet</h3>
                <p class="text-gray-500 mb-6">Be the first to list your property!</p>
                <a href="/host/add-home" class="inline-block bg-purple-600 hover:bg-purple-700 text-white font-semibold px-8 py-3 rounded-full transition-colors">
                    Add Your Home
                </a>
            </div>
        <% } else { %>
            <!-- Homes Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% registeredHomes.forEach(function(home) { %>
                    <div class="bg-gray-900 border border-gray-800 rounded-xl shadow-lg overflow-hidden hover:shadow-2xl hover:border-purple-500 transform hover:-translate-y-1 transition-all duration-300">
                        <!-- Image Placeholder -->
                        <img src="<%= home.imageUrl %>" alt="<%= home.title %>" class="h-56 w-full object-cover">
                        <!-- Content -->
                        <div class="p-6">
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-xl font-bold text-white"><%= home.title %></h3>
                                <div class="flex items-center gap-1">
                                    <svg class="w-5 h-5 text-yellow-400 fill-current" viewBox="0 0 20 20">
                                        <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                                    </svg>
                                    <span class="text-white font-semibold"><%= home.rating || 4.5 %></span>
                                </div>
                            </div>
                            <p class="text-gray-400 mb-4 line-clamp-3"><%= home.description %></p>
                            
                            <div class="flex items-center justify-between pt-4 border-t border-gray-800">
                                <div>
                                    <span class="text-2xl font-bold text-purple-400">$<%= home.price %></span>
                                    <span class="text-gray-500 text-sm"> / night</span>
                                </div>

                                
                                <div class="flex items-center gap-4">
                                    <a href="/homes/<%= home.id %>" class="text-purple-400 hover:underline font-semibold">
                                        View Details
                                    </a>

                                    <button class="bg-purple-600 hover:bg-purple-700 text-white font-semibold px-6 py-2 rounded-lg transition-colors">
                                    Book
                                </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>
    </main>

    <%- include('../partials/footer') %>